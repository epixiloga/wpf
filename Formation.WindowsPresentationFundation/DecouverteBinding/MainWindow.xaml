<Window x:Class="DecouverteBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DecouverteBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.171,0.491">
        <Slider x:Name="Modifier" Margin="228,34,0,0" Maximum="100" TickFrequency="2"  VerticalAlignment="Top" Width="238" RenderTransformOrigin="0.754,-1.316" Height="23"/>
        <Label Content="hello it's me again" FontSize="{Binding ElementName=Modifier, Path=Value}" HorizontalAlignment="Left" Margin="463,80,0,0" VerticalAlignment="Top" Height="106" Width="319" RenderTransformOrigin="1.135,0.604"/>
        <Image Source="pack://application:,,,/images/lapin.jpg" Width="{Binding ElementName=Modifier, Path=Value}" HorizontalAlignment="Left" Margin="267,156,0,0" VerticalAlignment="Top"></Image>
    </Grid>
</Window>
